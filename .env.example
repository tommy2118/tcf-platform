# TCF Platform Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
RACK_ENV=development
PORT=3006
BIND_HOST=0.0.0.0
APP_VERSION=1.0.0

# Service Configuration
TCF_PLATFORM_URL=http://localhost:3006

# TCF Service URLs (for integration with Gateway)
TCF_GATEWAY_URL=http://localhost:3000
TCF_PERSONAS_URL=http://localhost:3001
TCF_WORKFLOWS_URL=http://localhost:3002
TCF_PROJECTS_URL=http://localhost:3003
TCF_CONTEXT_URL=http://localhost:3004
TCF_TOKENS_URL=http://localhost:3005

# Database Configuration
POSTGRES_USER=tcf
POSTGRES_PASSWORD=development_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
COMPOSE_PROJECT_NAME=tcf

# Logging
LOG_LEVEL=info

# Security (generate secure values for production)
JWT_SECRET=development_jwt_secret_key_change_in_production
API_KEY=development_api_key_change_in_production