# Production Environment Configuration
# TCF Platform - Production Settings

# SECURITY WARNING
# Replace all placeholders with actual values
# Never commit production secrets
# Use a secure secrets management system

# Environment
ENVIRONMENT=production

# Database Configuration
POSTGRES_HOST=${DB_HOST}
POSTGRES_PORT=5432
POSTGRES_USER=tcf
POSTGRES_PASSWORD=${SECURE_POSTGRES_PASSWORD}
POSTGRES_SSL=require

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${SECURE_REDIS_PASSWORD}

# Application Secrets  
JWT_SECRET=${SECURE_JWT_SECRET}

# API Keys (Replace with actual production keys)
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# AWS Configuration (for artifact storage)
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1
S3_BUCKET=tcf-artifacts-prod

# Service Configuration
DEFAULT_DAILY_TOKEN_BUDGET=50000
MAX_CONTEXT_SIZE=100000

# Production Settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_PROFILING=false

# Security Settings
SECURE_HEADERS=true
RATE_LIMITING=true
SESSION_TIMEOUT=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090