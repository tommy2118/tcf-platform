# TCF Platform Nginx Configuration
# <%= environment.capitalize %> Environment

upstream tcf-gateway {
    server 127.0.0.1:3000;
<% if environment == 'production' %>
    server 127.0.0.1:3001 backup;
<% end %>
}

server {
<% if environment == 'production' %>
    listen 443 ssl http2;
    server_name tcf.example.com;

    # SSL Configuration
    ssl_certificate /etc/ssl/certs/tcf-platform.crt;
    ssl_certificate_key /etc/ssl/private/tcf-platform.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security Headers
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;" always;
<% else %>
    listen 80;
    server_name localhost;
<% end %>

    # Logging
    access_log /var/log/nginx/tcf-platform-access.log;
    error_log /var/log/nginx/tcf-platform-error.log;

    # Gzip Compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1000;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # Main proxy configuration
    location / {
        proxy_pass http://tcf-gateway;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffering
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://tcf-gateway/health;
        access_log off;
    }

    # Static assets
    location /assets {
        alias /app/public/assets;
        expires 1y;
        add_header Cache-Control public;
        add_header ETag "";
    }

    # API endpoints with special handling
    location /api {
        proxy_pass http://tcf-gateway/api;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Longer timeouts for API calls
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

<% if environment == 'production' %>
    # Redirect HTTP to HTTPS
}

server {
    listen 80;
    server_name tcf.example.com;
    return 301 https://$server_name$request_uri;
<% end %>
}